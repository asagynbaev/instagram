@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<link href="https://fonts.googleapis.com/css?family=Indie+Flower|Overpass+Mono" rel="stylesheet">

<div id="wrapper">
    <div class="main-content">
        <div class="header">
            <img src="~/img/instagram-logo.png" />
        </div>
        <div class="l-part">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "myform" }))
            {
                <input type="text" class="input-1" required name="Username" placeholder="Username">
                <div class="overlap-text">
                    <input type="password" class="input-2" required name="Password" placeholder="Password">
                </div>
                <input type="submit" value="Log in" class="btn" />
            }
        </div>
    </div>
    <div class="sub-content">
        <div class="alert-message">
            @if (null != TempData["alertMessage"])
            {
                @Html.Raw(TempData["alertMessage"])
            }   
        </div>
        <div class="clearfix"></div>
        <div class="s-part">
            Don't have an account? <a href="@Url.Action("Register", "Account")">Sign up</a>
        </div>
    </div>
</div>
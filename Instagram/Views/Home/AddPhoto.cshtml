

@{
    ViewBag.Title = "AddPhoto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Photo</h2>

@using (Html.BeginForm("AddPhoto", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    <div class="form-horizontal">
        
        <hr />
        
        <div class="form-group">
            <label class="col-md-3 col-xs-12 control-label align-right pt7">Choose image</label>
            <div class="col-md-10">
                <input type="file" name="image" style="width: 100%;" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 col-xs-12 control-label align-right pt7">Description</label>
            <div class="col-md-10">
                <input type="text" class="form-control form-group"  name="description">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
